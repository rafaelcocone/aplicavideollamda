<div class="container p-4">
    <div class="row">
        {{#each links}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{url}}">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        </a>
                        <p class="m-2">{{descripcion}}</p>
                        <p>{{timeago created_at}}</p>
                        <a href="" class="btn btn-primary">
                            <i class = "fa fa-comments-o"></i> Iniciar Chat
                        </a>
                        <a href="links/edit/{{id}}" class="btn btn-secondary">Editar</a>
                        <a href="links/delete/{{id}}" class="btn btn-secondary">Eliminar link</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay links existentes</p>
                    <a href="/links/add">Agrega un link</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>